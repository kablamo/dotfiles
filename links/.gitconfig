[user]
    name = Eric Johnson
    email = eric.git@iijo.org
[alias]
    alias = config --get-regexp alias
    b = branch
    c = commit
    ca = commit -a
    catchup = log --patch --reverse --topo-order _ribbon..origin/master
    co = checkout
    count = shortlog -sn
    d = difftool 
    di = diff -b
    df = diff --name-only
    h = help
    history = blame -w -c -n
    ll = log --pretty=format:'%C(bold white)%s%Creset\n%h %an %cr'   --abbrev-commit --no-merges --name-only 
    lo = "!f () { git log --no-merges --abbrev-commit --date=relative --pretty=format:'%h%x00%cd%x00%s%x00%an' $@ | gawk -F '\\0' '{ printf \"%s %-12s  %-100s %s\\n\", $1, $2, gensub(/(.{79}).{2,}/, \"\\\\1â€¦\",\"g\",$3), $4 }' | less -R; }; f"
    ls = log --pretty=format:'%C(bold white)%s%Creset\n%h %an %cr\n' --abbrev-commit --no-merges
    mrg = merge --no-ff
    p = push origin HEAD
    pp = !"echo 'Pull'; git pull; echo 'Push'; git push origin HEAD"
    ribbon = tag --force _ribbon origin/master
    s = status -sb
    tree = log --graph --pretty=oneline --abbrev-commit
    undo = git reset --hard HEAD^
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
[core]
    #excludesfile = "/etc/gitexcludes"
    autocrlf = input
    excludesfile = /home/eric/.gitignore_global
[diff]
    tool = vimdiff
[difftool]
    prompt = true
[rebase]
    autosquash = true
[push]
    default = tracking
