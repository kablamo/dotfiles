[user]
    name = Eric Johnson
    email = eric.git@iijo.org
[alias]
   ci = commit
   cia = commit -a
   st = status -s
   di = diff -b
   dt = difftool 
   tree = log --graph --pretty=oneline --abbrev-commit
   co = checkout
   br = branch
   mrg = merge --no-ff
   ll = log --pretty=format:'%C(bold white)%s%Creset\n%h %an %cr'   --abbrev-commit --no-merges --name-only 
   ls = log --pretty=format:'%C(bold white)%s%Creset\n%h %an %cr\n' --abbrev-commit --no-merges
   lo = "!f () { git log --no-merges --abbrev-commit --date=relative --pretty=format:'%h%x00%cd%x00%s%x00%an' $@ | gawk -F '\\0' '{ printf \"%s %-12s  %-100s %s\\n\", $1, $2, gensub(/(.{79}).{2,}/, \"\\\\1â€¦\",\"g\",$3), $4 }' | less -R; }; f"
[core]
   #excludesfile = "/etc/gitexcludes"
   autocrlf = input
[diff]
   tool = vimdiff
[difftool]
   prompt = 1
