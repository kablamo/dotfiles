[color]
   diff = auto
   status = auto
   branch = auto
[alias]
   ci = commit
   cia = commit -a
   st = status -s
   di = diff
   tree = log --graph --pretty=oneline --abbrev-commit
   co = checkout
   br = branch -a
   mrg = merge --no-ff
[core]
   #excludesfile = "/etc/gitexcludes"
   autocrlf = input
